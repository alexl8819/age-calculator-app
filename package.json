{
  "name": "age-calculator-app",
  "private": true,
  "author": "alexl8819",
  "license": "GPL-3.0-or-later",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --base=/age-calculator-app/",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{js,svelte}",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --no-cache"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@babel/preset-env": "^7.23.7",
    "@fontsource/poppins": "^4.5.10",
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/svelte": "^4.0.5",
    "babel-jest": "^29.7.0",
    "eslint": "^8.39.0",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "modern-css-reset": "^1.4.0",
    "svelte": "^3.57.0",
    "svelte-eslint-parser": "^0.27.0",
    "svelte-jester": "^2.3.2",
    "vite": "^4.3.0"
  },
  "dependencies": {
    "countup.js": "^2.5.0",
    "dayjs": "^1.11.7"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte": "svelte-jester",
      ".+\\.(css|styl|less|sass|scss|png|svg|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!countup\\.js)"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "^.+.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ]
  }
}
